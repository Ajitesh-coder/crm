<%-include("sidebar")-%>

<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="css/addclient.css">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="container">
    <div class="title">Client Requirements</div>
    <div class="content">
      <form action="#">
        <div class="user-details">
          <div class="input-box">
            <span class="details">First Name</span>
            <input type="text" placeholder="Enter your first name" required>
          </div>
          <div class="input-box">
            <span class="details">Last Name</span>
            <input type="text" >
          </div>
          
          <div class="input-box">
            <span class="details">Phone Number</span>
            <input type="text" >
          </div>
          <div class="input-box">
            <span class="details">Email</span>
            <input type="text" placeholder="Enter your email" required>
          </div>
          <div class="input-box">
            <span class="details">Preferred Location</span>
            <input type="text">
          </div>
          <div class="input-box">
            <span class="details">Max-Budget</span>
            <input type="number" min="1">
          </div>
          <div class="input-box" id="anything">
            <span class="details">Anything else?</span>
            <input type="text" >
          </div>
        </div>
        <div class="client-details">
          <input type="radio" name="client" id="dot-1">
          <input type="radio" name="client" id="dot-2">
          <input type="radio" name="client" id="dot-3">
          <span class="client-title">Client Type</span>
          <div class="category">
            <label for="dot-1">
            <span class="dot one"></span>
            <span class="client">Hot</span>
          </label>
          <label for="dot-2">
            <span class="dot two"></span>
            <span class="client">Warm</span>
          </label>
          <label for="dot-3">
            <span class="dot three"></span>
            <span class="client">Cold</span>
            </label>
          </div>
        </div>
        
      </div>
        <div class="buttonnn">
          <input type="submit" value="New Client">
        </div>
      </form>
    </div>
  </div>
  

</body>
</html>
