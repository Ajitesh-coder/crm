

<!-- Topbar -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory</title>
    <link rel="stylesheet" href="css/proper.css">
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body id="body">
<%-include("sidebar")-%>



<div class="top-bar">
    <h1 class="prop-head">
        Properties
      </h1>
    

    <div class="downbar">
        <button class="btn"><a href="/addinventorytogether"><i class="ri-add-line"></i>  New Property</a></button>
        <div class="sort">
        <ul>
            <li> <a href="#"><i class="fa-solid fa-filter"></i></a></li>
        </ul>
    </div>
    </div>



    <div>
      <% if (news !="") { %>
        <div class="utable">
          <table>
            <thead>
              <tr>
                <td>Sr. No.</td>
                <td>Details</td>
                <td>Owner Details</td>
                <td>Matching Lead</td>
                <td>Assigned To</td>
                <td>Status</td>
                <td>Last Contacted Date & Time</td>
                <td>Action</td>
              </tr>
          </thead>
          <tbody>
            <% news.forEach((row,index) => { %>
                <tr class="align-middle">
                  <td rowspan="1" colspan="1"><%= index+1 %></td>
                  <td>
                    <h4 style="color:rgb(24, 98, 198)">  <%= row.size %> Inventory In <%= row.icity %> <%= row.number %> <%= row.subLoc %> </h4>
                  <br>
                  <p><%= row.PropType %></p>
                  </td>
                  <td><i class="ri-user-fill"></i> <%= row.ownerName %>
                  <p><%= row.MobileNumber%></p>
                  </td>
                  <td><%= row.number %> <i class="ri-fire-fill" style="color: rgb(240, 187, 64);"></i></td>
                  <td><i class="ri-shield-user-fill"></i> Suraj Keshwwar </td>
                  <td>
                    Inactive
                  </td>
                  <td><%= row.lastcontact %></td>
                    <td class="block-1">

                      <div class="dropdown">
                        <button class="dropbtn"><i class="fa-solid fa-sort-down"></i></button>
                        <div class="dropdown-content">
                          <a href="/editinvent/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i>Edit</a>
                          <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i>Delete</a>
                          <form action="/sales" method="post">
                            <input type="hidden" value="<%= row._id %>" name="inventId">
                            <button class="forsalebtn"><i class="fas fa-dollar fa-lg mx-1"></i>ForSale</button>
                          </form>
                        </div>
                      </div>

                  </td>
                </tr>
            <% }) %>
        </tbody>
          </table>
        </div>
      <% } else{ %>
          <h1>No Database Found</h1>
        <% } %>
    </div>


</div>




<!-- end -->




<section class="maintable">
  <%  for(var i=0; i<news.length; i++){  %>
<% } %>
</section>
<script src="https://code.jquery.com/jquery-3.6.4.min.js" integrity="sha256-oP6HI9z1XaZNBrJURtCoUT5SUnxFr8s3BzRl+cbzUq8=" crossorigin="anonymous"></script>

<script src="https://cdn.datatables.net/v/dt/dt-1.13.4/datatables.min.js"></script>

<script>
  $(document).ready(function(){
      $("table").DataTable(
        {
          order:[0,'asc'],
          
          
      }
      )
  })
</script>
<script>
  let color = document.querySelector(".color");
  let newColor = document.querySelector(".color");
  function changeColor() {
    color.style.backgroundColor= newColor.value;
}

let dbtn = document.querySelector('.drop-menu-btn');
let dcontent = document.querySelector('.drop-menu-content');

function showoption() {
  dcontent.classList.toggle("active");

}

</script>
</body>
</html>